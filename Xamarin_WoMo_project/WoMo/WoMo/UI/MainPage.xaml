<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WoMo"
             x:Class="WoMo.MainPage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">
      <Label Text="WoMo APP"/>
      <Button Text="Stellplatz" Clicked="OnStellplatzClick" x:Name="Stellplatz"/>
      <Button Text="Checklist" Clicked="OnChecklistClick" x:Name="Checklist"/>
      <Button Text="Tagebuch" Clicked="OnTagebuchClick" x:Name="Tagebuch"/>
      <Button Text ="XML-Export" Clicked="OnXMLVerwaltungClick" x:Name="XML_Verwaltung"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>